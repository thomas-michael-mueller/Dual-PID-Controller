<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Bitte fÃ¼ge deine erste Dual-PID Steuerung hinzu."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputName"
        android:layout_marginTop="16dp"
        android:hint="@string/hint_controller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputUrl"
        android:layout_marginTop="8dp"
        android:hint="@string/hint_controller_url"
        android:inputType="textUri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:text="@string/label_esp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/inputEspType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnSave"
        android:layout_marginTop="16dp"
        android:text="@string/dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnDemo"
        android:layout_marginTop="12dp"
        android:text="@string/connect_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
